# Configuração do Backend - CurriculosPro IA

# Porta do servidor
PORT=3000

# JWT Secret (mude em produção!)
JWT_SECRET=seu_secret_key_super_seguro_aqui_mude_em_producao

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=sua_service_role_key_aqui

# OpenAI (opcional - apenas se não estiver usando modo mock)
OPENAI_API_KEY=sk-sua-chave-openai-aqui
OPENAI_MODEL=gpt-4

# Modo Mock da IA (para testes sem consumir créditos OpenAI)
# Defina como 'true' ou '1' para usar análise mockada
USE_MOCK_AI=true

# Email/SMTP
SMTP_HOST=seu-servidor-smtp.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_SENDER=seu-email@exemplo.com
EMAIL_SENDER_PASSWORD=sua-senha-aqui
EMAIL_SENDER_NAME=CurriculosPro IA
EMAIL_COPY_TO=email-copia@exemplo.com

# Frontend URL (para links de verificação de email)
FRONTEND_URL=http://localhost:4200

# Stripe (opcional - apenas se quiser usar pagamentos reais)
STRIPE_SECRET_KEY=sk_test_sua-chave-stripe
STRIPE_WEBHOOK_SECRET=whsec_sua-webhook-secret

